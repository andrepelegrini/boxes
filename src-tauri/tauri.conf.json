{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Project Boxes",
  "version": "0.1.0",
  "identifier": "com.projectboxes.app",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Project Boxes",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "devtools": true,
        "transparent": false,
        "focus": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "main-capability",
        "localhost-capability",
        "dev-capability",
        "slack-capability"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "copyright": "Copyright (c) 2025",
    "shortDescription": "Gestor de Caixas - Project Management",
    "longDescription": "A Portuguese project management application with AI-powered insights and Slack integration.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ],
    "publisher": "Project Boxes",
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": "entitlements.plist",
      "exceptionDomain": "*"
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:project_boxes.db"]
    },
    "shell": {
      "open": true
    }
  }
}