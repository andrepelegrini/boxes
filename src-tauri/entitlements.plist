<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Keychain access entitlements -->
    <key>keychain-access-groups</key>
    <array>
        <string>$(AppIdentifierPrefix)com.projectboxes.app</string>
        <string>$(AppIdentifierPrefix)project-boxes</string>
    </array>

    <!-- Outgoing network connections (e.g. connecting to AI providers, Slack, remote APIs) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Incoming network connections (e.g. local WebSocket server used by microâ€‘services) -->
    <key>com.apple.security.network.server</key>
    <true/>

    <!-- Allow the app to read and write user selected files.  This is used for settings, caches and any exported data. -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Application data groups for shared storage (e.g. between the app and helper processes) -->
    <key>com.apple.security.application-groups</key>
    <array>
        <string>group.com.projectboxes.app</string>
    </array>
</dict>
</plist>