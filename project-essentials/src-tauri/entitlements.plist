<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Keychain access entitlements -->
    <key>keychain-access-groups</key>
    <array>
        <string>$(AppIdentifierPrefix)com.projectboxes.app</string>
        <string>$(AppIdentifierPrefix)project-boxes</string>
    </array>
    
    <!-- Network access for Slack OAuth -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Outgoing network connections -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- Allow HTTP/HTTPS -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- File access for settings and cache -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Application data access -->
    <key>com.apple.security.application-groups</key>
    <array>
        <string>group.com.projectboxes.app</string>
    </array>
</dict>
</plist>