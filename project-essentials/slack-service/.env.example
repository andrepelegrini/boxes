# Slack Service Configuration
SLACK_SERVICE_PORT=3005
NODE_ENV=development
LOG_LEVEL=info

# Slack App Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token  # Only needed for Socket Mode
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_BOT_USER_ID=U123456789  # Your bot's user ID

# Connection Mode
SLACK_SOCKET_MODE=true  # Set to false for production HTTP mode

# Service URLs
QUEUE_SERVICE_URL=http://localhost:3004
AI_SERVICE_URL=http://localhost:3002
DATABASE_SERVICE_URL=http://localhost:3001

# Redis Configuration (if needed for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=1000